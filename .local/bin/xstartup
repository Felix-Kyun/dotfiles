#! /usr/bin/env bash
xrandr --newmode "1360x765_60.00"   84.50  1360 1432 1568 1776  765 768 773 795 -hsync +vsync
xrandr --addmode VGA1 "1360x765_60.00"
xrandr --output VGA1 --mode "1360x765_60.00"

sleep 1

# vars 
XSCT_TEMP=4500 # default 6500
BRIGHTNESS=0.4 # default 1.0
export $(dbus-launch)
xrdb ~/.Xresources

# set wallpaper 
nitrogen --restore 

# start compositor 
picom --experimental-backend -b 

# start polybar
# nord

# set night light 
# xsct $XSCT_TEMP
xrandr --output VGA1 --brightness $BRIGHTNESS

# start kde connect 
# /usr/lib/kdeconnectd & 

# late startup 
xset led named "Scroll Lock"
xset s 150
xmodmap -e "keysym Menu = Super_R"
# xmodmap -e "keysym Caps_Lock = Escape"

