configuration {
  font: "Fira Code Nerd Font 10";
  show-icons: true;
  modi: "window,drun";
  display-drun: " ";
  display-window: " ";
}

@theme "/dev/null"
@import "colors.rasi"

* {
  background-color: @bg;
  text-color: @fg;
  margin: 1;
  padding: 1;
  spacing: 0;
}

window {
  border: 1px;
  border-color: @bc;
  location: center;
  width: 30%;
}

element {}
element-text { vertical-align: 0.7; }
element-icon { size: 24px; }

element selected {
  background-color: @bg-alt;
  border-radius: 5px;
}
element-icon selected { background-color: @bg-alt; }
element-text selected { background-color: @bg-alt; }

entry {
  background-color: @bg-alt;
  padding: 12;
  placeholder: "Search";
  expand: true;
  blink: true;
}

inputbar {
  margin: 1% 0.5%;
  background-color: @bg-alt;
  children: [prompt, entry];
  border-radius: 10px;
}

listview {
  columns: 1;
  lines: 10;
  margin: 0.5% 0.1%;
  padding: 0.5%;
}

mainbox { children: [inputbar, listview]; }

prompt {
  background-color: @bg-alt;
  enabled: true;
  padding: 1%;
  vertical-align: 0.5;
}
