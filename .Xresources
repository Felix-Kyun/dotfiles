!*fading: 35
!*fadeColor: nord1

Xft.dpi: 84
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault

URxvt.scrollBar: false
URxvt.font: xft:FiraCode Nerd Font:style=Regular:pixelsize=13:minispace=False:antialias=true
!URxvt.letterSpace: -1

URxvt.internalBorder:  10
URxvt.cursorBlink: true
URxvt.cursorUnderline: true
URxvt.depth:             32
URxvt.saveLines:         10000
URxvt*geometry:          80x25
URxvt*terminalName:      urxvt
URxvt*visualBell:        false


URxvt*scrollTtyOutput: true
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt.iso14755:            false
URxvt.iso14755_52:         false
URxvt.keysym.C-Up:     \033[1;5A
URxvt.keysym.C-Down:   \033[1;5B
URxvt.keysym.C-Right:  \033[1;5C
URxvt.keysym.C-Left:   \033[1;5D
URxvt.keysym.C-Prior:  \033[5;5~
URxvt.keysym.C-Next:   \033[6;5~
URxvt.keysym.C-Home:   \033[7;5~
URxvt.keysym.C-End:    \033[8;5~

! resize font config
urxvt.perl-ext-common: default,tabbed,matcher,resize-font,-tabbed
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show
URxvt.resize-font.step: 0.5
! set control^[c|v]
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
